<h1 class="panel-heading text-center" style="font-size:60px"> <%= current_user.username %>'s Favorites </h1>

<% @favorites.each do |favorite| %>

<% if favorite.user_id == current_user.id %>

<tr>
  <div class="jumbotron">
    <div class="container text-center">
      <iframe id="player"
       width="640" height="360"
              src="<%= favorite.medium.media_url.gsub("watch?v=","embed/")%>"
      ></iframe>

      <div class=" text-center">
      Linked by <a href= "/users/<%=favorite.medium.user_id%>"> <%=favorite.medium.user.username%>
      </div>
<div class="panel-footer text-center"> <a  href="/media/<%= favorite.medium.id %>" ><%=favorite.medium.title%> </a></div>
<div class="btn-group-justified">
<h3  class="btn btn-primary" style="font-size:20px"> Score:<%= (favorite.medium.ups - favorite.medium.downs) %></h3>
</div>

<div class=" btn-group-justified">
        <a href="/delete_favorite/<%= favorite.id %>" class="btn btn-danger" rel="nofollow">
          Remove Favorite
        </a>

</div>
</div>
</div>
<% else %>
<% end %>
<% end %>
</div>
