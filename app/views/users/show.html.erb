
<!-- Score Counter -->
<% userscore = 0 %>
<% @media.each do |medium| %>
<% if medium.user_id == @users.id %>
<%userscore = userscore + (medium.ups - medium.downs) %>
<% else %>
<% end %>
<% end %>
<div class="panel-footer text-center"> </div>
<h1 class="panel-heading text-center" style="font-size:60px"> <%= @users.username %> </h1>
<div class="panel-footer text-center" style="font-size:30px"> Current Score:
  <h1  class="fif score
<% if userscore < 0 %>
text-danger
<% else %>
  text-success
<% end %>
  " style="font-size:30px"> <%= userscore %>
  <% if userscore < 0 %>
<i class="fa fa-arrow-circle-down"> </i>
  <% else %>
<i class="fa fa-arrow-circle-up"> </i>
  <% end %>
